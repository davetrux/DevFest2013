<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DisplayText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal|top</item>
        <item name="android:minWidth">300dp</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:textSize">70dp</item>
    </style>
    <style name="UIButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal|top</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_toRightOf">@+id/uiTestText</item>
        <item name="android:minWidth">250dp</item>
        <item name="android:textSize">40dp</item>
    </style>
    <style name="BlockButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_toRightOf">@+id/uiTestText</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">140dp</item>
        <item name="android:minWidth">250dp</item>
        <item name="android:textSize">40dp</item>
    </style>

    <style name="AsyncButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_toRightOf">@+id/uiTestText</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">240dp</item>
        <item name="android:minWidth">250dp</item>
        <item name="android:textSize">40dp</item>
    </style>
    <style name="ResultText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">60dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#ff0000</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">350dp</item>
    </style>
</resources>