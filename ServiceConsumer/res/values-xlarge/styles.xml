<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AsyncButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">400dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textSize">40dp</item>
    </style>
    <style name="ServiceButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">175dp</item>
        <item name="android:minWidth">400dp</item>
        <item name="android:textSize">40dp</item>
    </style>
    <style name="Results">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginTop">300dp</item>
        <item name="android:textSize">40dp</item>
    </style>
    <style name="RowIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="RowText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">128dp</item>
        <item name="android:layout_toRightOf">@id/icon</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>
</resources>